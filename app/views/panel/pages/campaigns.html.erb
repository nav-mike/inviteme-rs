<%= turbo_frame_tag :pages, class: 'bg-slate-200 w-full p-5', 'data-navigation-target': 'content' do %>
  <%- title 'Campaigns' %>
  <%= render 'shared/admin/header' %>
  <%= simple_form_for @new_campaign, as: :campaign, method: :post, url: :panel_campaigns do |f| %>
    <%= f.label :name %>
    <%= f.input_field :name, placeholder: 'Enter the campaign name' %>
    <%= f.label :token %>
    <%= f.input_field :token %>
    <%= f.label :amount %>
    <%= f.input_field :amount %>
    <%= f.submit 'Create' %>
    <%= button_tag 'Reset', type: 'reset' %>
  <% end %>
<% end %>

<div class="flex" data-controller="navigation"
     data-action="turbo:before-fetch-request@document->navigation#displayLoading
                  turbo:before-fetch-request@document->navigation#displayContent">
  <%= render 'shared/admin/navbar' %>
  <%= turbo_frame_tag :pages, class: 'bg-slate-200 w-full p-5', 'data-navigation-target': 'content' do %>
    <%- title 'Overview' %>
    <%= render 'shared/admin/header' %>
  <% end %>
  <div class="hidden flex justify-center" data-navigation-target="loading">
    <%= image_tag 'loading.gif', size: '200' %>
  </div>
</div>

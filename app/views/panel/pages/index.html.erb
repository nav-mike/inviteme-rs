<div class="flex" data-controller="navigation"
     data-action="turbo:before-fetch-request@document->navigation#displayLoading
                  turbo:before-fetch-request@document->navigation#displayContent">
  <%= render 'shared/admin/navbar' %>
  <%= turbo_frame_tag :pages, class: 'bg-slate-200 w-full p-5', 'data-navigation-target': 'content' do %>
    <%- title 'Overview' %>
    <%= render 'shared/admin/header' %>
    <div class="flex justify-between pt-10 w-full flex-1">
      <div class="flex flex-col items-center border-2 border-slate-300 bg-white rounded-md p-5
                  hover:border-blue-700 hover:cursor-pointer text-slate-400 hover:text-blue-700"
                  data-controller="pane" data-action="mouseenter->pane#drawPane mouseleave->pane#unDrawPane">
        <p class="font-medium">Active campaigns</p>
        <p class="text-black font-bold text-3xl pt-5" data-pane-target="value">20</p>
      </div>
      <div class="flex flex-col items-center border-2 border-slate-300 bg-white rounded-md p-5
                  hover:border-blue-700 hover:cursor-pointer text-slate-400 hover:text-blue-700"
           data-controller="pane" data-action="mouseenter->pane#drawPane mouseleave->pane#unDrawPane">
        <p class="font-medium">New referrals</p>
        <p class="text-black font-bold text-3xl pt-5" data-pane-target="value">20</p>
      </div>
      <div class="flex flex-col items-center border-2 border-slate-300 bg-white rounded-md p-5
                  hover:border-blue-700 hover:cursor-pointer text-slate-400 hover:text-blue-700"
           data-controller="pane" data-action="mouseenter->pane#drawPane mouseleave->pane#unDrawPane">
        <p class="font-medium">New referrers</p>
        <p class="text-black font-bold text-3xl pt-5" data-pane-target="value">20</p>
      </div>
      <div class="flex flex-col items-center border-2 border-slate-300 bg-white rounded-md p-5
                  hover:border-blue-700 hover:cursor-pointer text-slate-400 hover:text-blue-700"
           data-controller="pane" data-action="mouseenter->pane#drawPane mouseleave->pane#unDrawPane">
        <p class="font-medium">Total benefits</p>
        <p class="text-black font-bold text-3xl pt-5" data-pane-target="value">$20</p>
      </div>
    </div>
  <% end %>
  <div class="hidden flex justify-center" data-navigation-target="loading">
    <%= image_tag 'loading.gif', size: '200' %>
  </div>
</div>
